{
  "compilerOptions": {
    "types": ["bun-types"],

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext"],

    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@db/*": ["src/db/*"],
      "@lib/*": ["src/lib/*"],
      "@commands/*": ["src/lib/commands/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "include": ["src/**/*", "src/api/**/*"],
  "exclude": ["node_modules"]
}
